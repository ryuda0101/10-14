<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>게시글 목록</title>
    <style>
        * {margin:0; padding:0;}
        table {border-collapse:collapse; text-align:center;}
        .board {width:1000px; margin:0 auto;}
        .board th, .board td {border:1px solid #000;}
    </style>
</head>
<body>
<!-- 글 목록 -->
    <table class="board">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일자</th>
            <th>조회수</th>
        </tr>
        <% for(let i = 0; i < data.length; i++){ %>
            <tr>
                <td><%- data[i].brdid %></td>
                <td><a href="/detail/<%- data[i].brdid %>"><%- data[i].brdtitle %></a></td>
                <td><%- data[i].brdauther %></td>
                <td><%- data[i].brddate %></td>
                <td><%- data[i].brdviews %></td>
            </tr>
        <% } %>
    </table>
    <a href="/insert">글쓰기</a>
    <a href="/list">목록</a>

<!-- 검색 기능 -->
    <form action="/search" method="get">
        <select name="searchCategory">
            <option value="brdtitle">제목</option>
            <option value="brdcontext">내용</option>
            <option value="brdauther">작성자</option>
        </select>
        <input type="text" name="searchResult">
        <button type="submit">검색</button>
    </form>
</body>
</html>